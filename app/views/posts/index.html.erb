<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Feed</th>
      <th>Post text</th>
      <th>S tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author_id %></td>
        <td><%= post.feed_id %></td>
        <td><%= post.post_text %></td>
        <td><%= post.s_tags %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
